<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="fr.esigelec.projetHibernate.dto">

 <class name="Pays" table="pays">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="nom"  type="string"/>
        <property name="superficie"  type="float"/> 		<!-- column ="prenom" par défaut-->
        
	<!-- les types  peuvent etre trouvés automatiquement par hibernate avec la reflexion, il peut etre utile de les mettre pour le type Date par exemple, car il existe plusieurs classes date -->
         
        
</class>

</hibernate-mapping>
