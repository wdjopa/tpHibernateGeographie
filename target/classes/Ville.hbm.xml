<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="fr.esigelec.projetHibernate.dto">

<class name="Ville" table="ville">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="nom"  type="string"/>
        <property name="nb_habitants"  type="integer"/> 		<!-- column ="prenom" par défaut-->
        <property name="id_pays" type="integer"/>
        
	<!-- les types  peuvent etre trouvés automatiquement par hibernate avec la reflexion, il peut etre utile de les mettre pour le type Date par exemple, car il existe plusieurs classes date -->
         
	<many-to-one name="pays" column="id_pays" not-null="true"/> 
        
</class>

</hibernate-mapping>
